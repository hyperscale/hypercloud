{
  "$schema": "http://json-schema.org/draft-04/schema",
  "properties": {
    "stack_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]+$"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]+$",
      "minLength": 3
    }
  },
  "required": ["name", "stack_id"],
  "additionalProperties": false
}
